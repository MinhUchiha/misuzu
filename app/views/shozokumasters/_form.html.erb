<%= form_for @shozokumaster, html:{class: 'form-horizontal', role: :form, 'data-model' => 'shozokumaster'} do |f| %>
  <% if @shozokumaster.errors.any? %>
    <div id="error_explanation">
      <h2><%= @shozokumaster.errors.count %> エラーが発生しました:</h2>
      <ul>
      <% @shozokumaster.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>
    
    <div class="spacer"></div>
    
  <div class="form-group">
    <%= f.label :所属コード, class: 'col-sm-2 control-label' %>
    <div class="col-sm-2">
      <%= f.text_field :所属コード, class: 'form-control', maxlength: 10 %>
    </div>
  </div>

  <div class="form-group">
    <%= f.label :所属名, class: 'col-sm-2 control-label' %>
    <div class="col-sm-2">
      <%= f.text_field :所属名, class: 'form-control' %>
    </div>
  </div>

  <div class="form-group">
    <div class="col-sm-2 col-sm-offset-2">
      <%= f.submit '　登録　', class: 'btn btn-primary' %>
    </div>
  </div>
<% end %>