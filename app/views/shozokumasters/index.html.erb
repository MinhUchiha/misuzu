<table id="shozokumaster" class="table table-striped table-bordered table-hover" cellspacing="0">

  <thead>
  <tr>
    <th>所属コード</th>
    <th>所属名</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>
  </thead>

  <tbody>
  <% @shozokumasters.each do |shozoku| %>
      <tr id="shozokumaster_<%= shozoku.id %>">
      <td><%= shozoku.所属コード %></td>
        <td><%= shozoku.所属名 %></td>
        <td><%= link_to '詳細', shozoku %></td>
        <td><%= link_to '編集', edit_shozokumaster_path(shozoku) %></td>
        <td><%= link_to '削除', shozoku, remote: true, method: :delete, data: { confirm: '削除で宜しですか。' } %></td>
      </tr>
  <% end %>
  </tbody>
</table>

