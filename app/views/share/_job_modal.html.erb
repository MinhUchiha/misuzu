<div class="modal" id="job_search_modal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
        <h4 class="modal-title" id="myModalLabel">JOB選択</h4>
      </div>
      
      <div class="modal-body">
        <table id="job_table" class="table table-striped table-bordered table-hover" cellspacing="0">
          
          <thead>
          <tr>
            <th>JOB番号</th>
            <th>JOB名</th>
            <th>開始日</th>
            <th>終了日</th>
          </tr>
          </thead>

          <tbody>
          <% @jobs.each do |job| %>
              <tr>
                <td><%= job.job番号 %></td>
                <td><%= job.job名 %></td>
                <td><%= job.開始日 %></td>
                <td><%= job.終了日 %></td>
              </tr>
          <% end %>
          </tbody>
          
        </table>
      </div>
      
      <div class="modal-footer">
        <button type="button" class="btn btn-primary" data-dismiss="modal" id="job_sentaku_ok">　ＯＫ　</button>
        <button type="button" class="btn btn-default" data-dismiss="modal">閉じる</button>
      </div>
      
    </div>
  </div>
</div>