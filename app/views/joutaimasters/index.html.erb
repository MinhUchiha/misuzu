<%= javascript_include_tag 'joutai' %>
<ol class="breadcrumb">
  <li><%= link_to 'メニュー', main_path %></li>
  <!-- <li><a href="#">基準情報</a></li> -->
  <!-- <li><a href="#">セキュリティ管理</a></li> -->
  <li class="active">状態マスタ</li>
</ol>

<!-- <h1>工程マスタ</h1> -->

<table id="joutaimaster" class="table table-striped table-bordered table-hover" cellspacing="0">

  <thead>
  <tr>
    <th>状態コード</th>
    <th>状態名</th>
    <th>状態区分</th>
    <th>勤怠状態名</th>
    <th>マーク</th>
    <th>色</th>
    <th>WEB使用区分</th>
    <th>勤怠使用区分</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>
  </thead>

  <tbody>
  <% @joutaimasters.each do |joutai| %>
      <tr id="joutaimaster_<%= joutai.id %>">
        <td><%= joutai.状態コード %></td>
        <td><%= joutai.状態名 %></td>
        <td><%= joutai.状態区分 %></td>
        <td><%= joutai.勤怠状態名 %></td>
        <td><%= joutai.マーク %></td>
        <td><%= joutai.色 %></td>
        <td><%= joutai.WEB使用区分 %></td>
        <td><%= joutai.勤怠使用区分 %></td>
        <td><%= link_to '詳細', joutai %></td>
        <td><%= link_to '編集', edit_joutaimaster_path(joutai) %></td>
        <td><%= link_to '削除', joutai, method: :delete, data: { confirm: '削除で宜しですか。' } %></td>

      </tr>
  <% end %>
  </tbody>
</table>

<%= link_to '新規', new_joutaimaster_path %>