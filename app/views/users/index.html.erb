<table id="user_table" class="table table-striped table-bordered table-hover" cellspacing="0" width="100%">

  <thead>
    <tr>
      <th>担当者コード</th>
      <th>担当者名称</th>
      <th>アドミン</th>
      <th colspan="3">アクション</th>
    </tr>
  </thead>

  <tbody>
  <% @users.each do |user| %>
      <tr id="user_<%= user.id %>">
        <td><%= user.担当者コード %></td>
        <td><%= user.担当者名称 %></td>
        <td><%= user.admin %></td>
        <td><%= link_to '詳細', user %></td>
        <td><%= link_to '編集', edit_user_path(user) if
        current_user.admin? %></td>
        <td><%= link_to '削除', user, method: :delete, data: { confirm: '削除で宜しですか。'} if current_user.admin? %></td>
      </tr>
  <% end %>
  </tbody>
</table>

