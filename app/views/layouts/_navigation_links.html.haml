%nav.navbar.navbar-inverse.navbar-fixed-top{role: :navigation}
  .container-fluid
    .navbar-header
      .navbar-brand 勤務管理システム
    .collapse.navbar-collapse
      %ul.nav.navbar-nav.navbar-right
        - user = User.find session[:user]
        - if !user.nil?
          %li.navbar-text パスワード更新日：#{user.updated_at.to_date}
          %li= image_tag user.avatar.url(:thumb)
          %li= link_to user.try(:担当者名称).to_s, edit_user_path(user)
          %li.dropdown
            %a.dropdown-toggle{'href'=>"#", 'data-toggle'=>"dropdown", 'role'=>"button", 'aria-haspopup'=>"true", 'aria-expanded'=>"false"}
              %span.glyphicon.glyphicon-asterisk
              %span.caret
            %ul.dropdown-menu
              %li= link_to 'ログアウト', root_path
              %li= link_to 'プロファイル変更', edit_user_path(user)